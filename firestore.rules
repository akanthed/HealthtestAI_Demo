rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: allow users to read their own profile and update non-role fields.
    // Role modifications must be done by Admins via server (custom claims).
    match /users/{userId} {
      // Allow authenticated users to read/write their own profile. Role enforcement is temporarily disabled.
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    match /complianceStandards/{standardId} {
      allow read, write: if request.auth != null;
    }
    match /requirements/{requirementId} {
      allow read, write: if request.auth != null;
    }
    match /testCases/{testCaseId} {
      // Development: allow any authenticated user to read and modify test cases.
      // In production, replace with role-based checks using custom claims or a users/{uid} doc.
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    match /deid_mappings/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // only server functions should write
    }
    match /auditLogs/{logId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
